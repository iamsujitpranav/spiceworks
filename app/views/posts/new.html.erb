<%= form_with model: @post do |f| %>
	<%= f.hidden_field :user_id, value: current_user.id%>
	<%= label_tag(:title, "Title") %>
	<br/>
	<%= f.text_field :title, placeholder: "Title"%>
	<br/>
	<%= label_tag(:desc, "Description") %>
	<br/>
  <%= f.text_area :body, placeholder: "Add Content" %><br/>
  <%= f.submit "submit"  %>
<% end %>